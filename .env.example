# Copy this file to .env and replace the example values with real credentials
SECRET_KEY=change-me
DEBUG=0
ALLOWED_HOSTS=localhost,127.0.0.1
SITE_URL=http://localhost:8000

# Database configuration (PostgreSQL example)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=your_database_host
DB_PORT=5432
DB_CONN_MAX_AGE=600
# Optional additional connection options (for example: -c search_path=public)
DB_OPTIONS=

# Email configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_smtp_username
EMAIL_HOST_PASSWORD=your_smtp_password

# Uncomment the lines below to develop with SQLite instead of PostgreSQL
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=/absolute/path/to/db.sqlite3
